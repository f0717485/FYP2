<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:clickable="true"
    android:background="#24578a">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textFieldHolder"
        android:layout_alignParentTop="true"
        android:layout_marginTop="75dp"
        android:layout_alignParentStart="true">

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etUsername"
            android:hint="Username"
            android:textColor="#35f60a" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/etPassword"
            android:hint="Password"
            android:textColor="#35f60a" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="106dp"
        android:id="@+id/linearLayout"
        android:layout_below="@+id/checkboxHolder"
        android:layout_alignParentStart="true"
        android:paddingTop="10dp">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:id="@+id/btnLogin"
            android:textSize="50dp"
            android:singleLine="true"
            android:textColor="#ffffff"
            style="@style/TextAppearance.AppCompat.SearchResult.Title"
            android:background="@drawable/abc_spinner_ab_pressed_holo_dark"
            android:layout_below="@+id/checkboxHolder"
            android:layout_alignParentStart="true" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="245dp"
        android:layout_height="45dp"
        android:id="@+id/checkboxHolder"
        android:paddingTop="10dp"
        android:weightSum="1"
        android:layout_below="@+id/textFieldHolder"
        android:layout_alignParentStart="true">

        <CheckBox
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Remeber me"
            android:id="@+id/checkBox"
            android:checked="false"
            android:textSize="20dp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register here"
        android:id="@+id/tvRegisterLink"
        android:layout_below="@+id/linearLayout"
        android:textSize="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center" />

</RelativeLayout>
